{
  "name": "codecomfy-vscode",
  "displayName": "CodeComfy Gallery",
  "description": "Generate images and videos with ComfyUI, view outputs in NextGallery",
  "version": "0.4.0",
  "publisher": "mcp-tool-shop",
  "author": {
    "name": "mcp-tool-shop",
    "email": "64996768+mcp-tool-shop@users.noreply.github.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mcp-tool-shop-org/codecomfy-vscode"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "comfyui",
    "gallery",
    "ai",
    "image generation",
    "video generation",
    "stable diffusion"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codecomfy.openGallery",
        "title": "CodeComfy: Open Gallery"
      },
      {
        "command": "codecomfy.generateImageHQ",
        "title": "CodeComfy: Generate Image (HQ)"
      },
      {
        "command": "codecomfy.generateVideoHQ",
        "title": "CodeComfy: Generate Video (HQ)"
      },
      {
        "command": "codecomfy.cancelGeneration",
        "title": "CodeComfy: Cancel Generation"
      }
    ],
    "configuration": {
      "title": "CodeComfy",
      "properties": {
        "codecomfy.nextGalleryPath": {
          "type": "string",
          "default": "",
          "description": "Path to NextGallery.exe. If not set, common install locations will be checked."
        },
        "codecomfy.comfyuiUrl": {
          "type": "string",
          "default": "http://127.0.0.1:8188",
          "description": "URL of the ComfyUI server."
        },
        "codecomfy.ffmpegPath": {
          "type": "string",
          "default": "",
          "description": "Path to FFmpeg executable. If not set, common locations and PATH will be checked."
        },
        "codecomfy.autoOpenGalleryOnComplete": {
          "type": "boolean",
          "default": true,
          "description": "Automatically open NextGallery when generation completes."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "compile:test": "tsc -p ./tsconfig.test.json",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "pretest": "npm run compile:test",
    "test": "mocha dist-test/test/**/*.test.js --timeout 10000",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.0.0",
    "@types/sinon": "^17.0.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "mocha": "^10.4.0",
    "sinon": "^17.0.0",
    "typescript": "^5.3.0",
    "@vscode/vsce": "^2.22.0"
  }
}
